            android:layout_width="@dimen/hw"
            android:layout_height="@dimen/hw"
            android:src="@drawable/geminis"
            android:layout_gravity="center_horizontal"
            android:onClick="setGeminis"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintCircle="@id/imgCentral"
        app:layout_constraintCircleRadius="@dimen/radio"
        app:layout_constraintCircleAngle="75">
        <ImageView
            android:layout_width="@dimen/hw"
            android:layout_height="@dimen/hw"
            android:src="@drawable/cancer"
            android:layout_gravity="center_horizontal"
            android:onClick="setCancer"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintCircle="@id/imgCentral"
        app:layout_constraintCircleRadius="@dimen/radio"
        app:layout_constraintCircleAngle="105">
        <ImageView
            android:layout_width="@dimen/hw"
            android:layout_height="@dimen/hw"
            android:src="@drawable/leo"
            android:layout_gravity="center_horizontal"
            android:onClick="setLeo"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintCircle="@id/imgCentral"
        app:layout_constraintCircleRadius="@dimen/radio"
        app:layout_constraintCircleAngle="135">
