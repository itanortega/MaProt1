<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sime.itanortegaortega.astross.MainActivity"
    android:padding="2dp">

    <LinearLayout
        android:id="@+id/imgCentral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintLeft_toLeftOf = "parent"
        app:layout_constraintEnd_toEndOf = "parent"
        app:layout_constraintRight_toRightOf = "parent"
        app:layout_constraintTop_toTopOf = "parent"
        app:layout_constraintBottom_toBottomOf = "parent"
        android:orientation="vertical"
        android:onClick="toSigno">
        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/tauro"
            android:layout_gravity="center_horizontal"
            android:id="@+id/ImgVCentral"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aries"
            android:layout_gravity="center_horizontal"
            android:id="@+id/Txt_Nombre_Signo"
            style="@style/nom1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aries_f"
            android:layout_gravity="center_horizontal"
            android:id="@+id/Txt_Fechas"
            style="@style/fec1"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/fnd"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintLeft_toLeftOf = "parent"
        app:layout_constraintEnd_toEndOf = "parent"
        app:layout_constraintRight_toRightOf = "parent"
        app:layout_constraintTop_toTopOf = "parent"
        app:layout_constraintBottom_toBottomOf = "parent"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintCircle="@id/imgCentral"
        app:layout_constraintCircleRadius="@dimen/radio"
        app:layout_constraintCircleAngle="345">
        <ImageView
            android:layout_width="@dimen/hw"
            android:layout_height="@dimen/hw"
            android:src="@drawable/aries"
            android:layout_gravity="center_horizontal"
            android:onClick="setAries"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintCircle="@id/imgCentral"
        app:layout_constraintCircleRadius="@dimen/radio"
        app:layout_constraintCircleAngle="15">
        <ImageView
            android:layout_width="@dimen/hw"
            android:layout_height="@dimen/hw"
            android:src="@drawable/tauro"
            android:layout_gravity="center_horizontal"
            android:onClick="setTauro"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintCircle="@id/imgCentral"
        app:layout_constraintCircleRadius="@dimen/radio"
        app:layout_constraintCircleAngle="45">
